<!doctype html>
<html>
  <head>
  <meta charset="utf-8">
  <%= stylesheet_link_tag "style" %>
  <!--<link href="http://roboto-webfont.googlecode.com/svn/trunk/roboto.all.css" rel="stylesheet" type="text/css">-->
  <!--%= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Roboto" %>-->
  <!--<link rel="stylesheet" type="text/css" href="/stylesheets/style.css">-->
  <!--<link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Roboto">-->
  
  <title>Timeline</title>
  
  </head>
  
  
  <body>
  <!--HEADER SECTION-->
  <div id="header" align = "right">
    <p>&nbsp;</p>
    <p><img src="\assets\heading.png" valign="middle" width="35%" alt=""/></p>
  </div>
  
  <!--NAVIGATION SECTION-->
  <table id="nav" border="0">
    <tbody>
      <tr>
      <th scope="col" id="timelinelink"><%= link_to 'Timeline', projects_path(@projects)%></th>
      <th scope="col" id="newprojectlink"><%= link_to 'New Project', new_project_path(@projects)%></th>
      <% if user_signed_in? %>
        <!--Logged in as <strong>%= current_user.email %></strong>.-->
       <th scope="col" id="newprojectlink"> <%= link_to 'Edit Profile', edit_user_registration_path, :class => 'navbar-link' %> </th>
       <th scope="col" id="newprojectlink"> <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %></th>
      <% end %> 
    </tr>
    </tbody>
  </table>
  
  <!--TIMELINE SECTION-->
  
    <div id="overflowbox" style="border:0px ;width:100%;height:450px;">
    
    <% if flash[:message] %>
      <div class="notice" align="center"><%= flash[:message] %></div>
    <% end %>
    <p></p>
       
     <%= form_tag(projects_path, :method => "get", class: "search", id: "search-form") do %>
        <div class="input-append">
          <button class="btn" type="submit"><strong>Search</strong></button>
          <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Projects by " %>
          <%= select_tag :options, options_for_select(["company", "title", "start date", "end date"], params[:options]) %>
        </div>
      <% end %>
      </p>
      <p style="width:100%;">
        <% @projects.each do |project| %>
        <div id=company>
      		<h3><%= project.company %></h3>
      		<h4><%= link_to project.title, project_path(project) %></h4>
      		<h5><%= project.start_date %><br><%= project.end_date %></h5>
        </div>
        <% end %>
      </p>
    </div>
  
  </body>
</html>
