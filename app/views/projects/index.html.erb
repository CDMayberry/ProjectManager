<!doctype html>
<html>
  <head>
  <meta charset="utf-8">
  <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
  <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Roboto">
  <title>Timeline</title>
  
  </head>

  
  <body>
  <!--HEADER SECTION-->
  <div id="header" align = "right">
    <p>&nbsp;</p>
    <p><img src="\assets\heading.png" valign="middle" width="35%" alt=""/></p>
  </div>
  
  <!--NAVIGATION SECTION-->
  <table id="nav" width="100%" border="0">
    <tbody>
      <tr>
      <th scope="col" id="timelinelink"><%= link_to 'Timeline', projects_path(@projects)%></th>
      <th scope="col" id="newprojectlink"><%= link_to 'New Project', new_project_path(@projects)%></th>
    </tr>
    </tbody>
  </table>
  
  <!--TIMELINE SECTION-->
  
    <div id="overflowbox" style="border:0px ;width:100%;height:400px;">
     <p>
     <%= form_tag(projects_path, :method => "get", class: "search", id: "search-form") do %>
        <div class="input-append">
          <strong>Search:</strong> 
          <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Projects" %>
          <%= select_tag :options, options_for_select(["title", "company", "start date", "end date"], params[:options]) %>
    
          <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
               of using a Rails form helper -->
          <button class="btn" type="submit"><i class="icon-search"></i></button>
        </div>
      <% end %>
      </p>
      <p style="width:100%;">
        <% @projects.each do |project| %>
        <div id=company width="400px" height="350px">
      		<h3><%= project.company %></h3>
      		<h4><%= link_to project.title, project_path(project) %></h4>
      		<h5><%= project.start_date %><br><%= project.end_date %></h5>
        </div>
        <% end %>
      </p>
    </div>
  
  </body>
</html>
